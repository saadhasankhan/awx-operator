---
apiVersion: v1
kind: Pod
metadata:
  name: {{ ansible_operator_meta.name }}-db-management
  namespace: {{ backup_pvc_namespace }}
  labels:
    awx/name: '{{ ansible_operator_meta.name }}'
    awx/part-of: '{{ ansible_operator_meta.name }}'
    awx/managed-by: '{{ deployment_type }}-operator'
    awx/component: '{{ deployment_type }}'
    awx/operator-version: '{{ lookup("env", "OPERATOR_VERSION") }}'
spec:
  containers:
  - name: {{ ansible_operator_meta.name }}-db-management
    image: "{{ postgres_image }}:{{ postgres_image_version }}"
    imagePullPolicy: Always
    command: ["sleep", "infinity"]
    volumeMounts:
    - name: {{ ansible_operator_meta.name }}-backup
      mountPath: /backups
      readOnly: false
  volumes:
    - name: {{ ansible_operator_meta.name }}-backup
      persistentVolumeClaim:
        claimName: {{ backup_claim }}
        readOnly: false
  restartPolicy: Never
