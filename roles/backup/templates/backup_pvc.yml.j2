---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ deployment_name }}-backup-claim
  namespace: {{ backup_pvc_namespace }}
  ownerReferences: null
  labels:
    awx/name: '{{ ansible_operator_meta.name }}'
    awx/part-of: '{{ ansible_operator_meta.name }}'
    awx/managed-by: '{{ deployment_type }}-operator'
    awx/component: '{{ deployment_type }}'
    awx/operator-version: '{{ lookup("env", "OPERATOR_VERSION") }}'
spec:
  accessModes:
    - ReadWriteOnce
{% if backup_storage_class is defined %}
  storageClassName: {{ backup_storage_class }}
{% endif %}
  resources:
    requests:
      storage: {{ backup_storage_requirements | default('5Gi', true) }}
