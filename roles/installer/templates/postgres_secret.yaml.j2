# Postgres Secret.
---
apiVersion: v1
kind: Secret
metadata:
  name: '{{ ansible_operator_meta.name }}-postgres-configuration'
  namespace: '{{ ansible_operator_meta.namespace }}'
  labels:
    awx/name: '{{ ansible_operator_meta.name }}'
    awx/part-of: '{{ ansible_operator_meta.name }}'
    awx/managed-by: '{{ deployment_type }}-operator'
    awx/component: '{{ deployment_type }}'
    awx/operator-version: '{{ lookup("env", "OPERATOR_VERSION") }}'
stringData:
  password: '{{ lookup('password', '/dev/null length=32 chars=ascii_letters,digits') }}'
  username: '{{ database_username }}'
  database: '{{ database_name }}'
  port: '5432'
  host: {{ ansible_operator_meta.name }}-postgres
  type: 'managed'
