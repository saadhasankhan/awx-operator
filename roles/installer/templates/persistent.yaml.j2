{% if projects_persistence|bool and projects_existing_claim == '' %}
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: '{{ ansible_operator_meta.name }}-projects-claim'
  namespace: '{{ ansible_operator_meta.namespace }}'
  labels:
    awx/name: '{{ ansible_operator_meta.name }}'
    awx/part-of: '{{ ansible_operator_meta.name }}'
    awx/managed-by: '{{ deployment_type }}-operator'
    awx/component: '{{ deployment_type }}'
    awx/operator-version: '{{ lookup("env", "OPERATOR_VERSION") }}'
spec:
  accessModes:
    - {{ projects_storage_access_mode }}
  resources:
    requests:
      storage: {{ projects_storage_size }}
{% if projects_storage_class is defined %}
  storageClassName: {{ projects_storage_class }}
{% endif %}
{% endif %}
